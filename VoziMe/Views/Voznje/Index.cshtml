        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.vrijeme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ocjena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cijena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adresaPolazista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adresaDolazista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klijent.adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vozac.adresa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
