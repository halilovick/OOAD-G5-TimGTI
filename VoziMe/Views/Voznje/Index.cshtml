@model IEnumerable<VoziMe.Models.Voznje>

@{
    ViewData["Title"] = "Historija vožnji";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.vrijeme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ocjena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cijena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adresaPolazista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adresaDolazista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vozilo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klijent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vozac)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.vrijeme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ocjena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cijena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adresaPolazista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adresaDolazista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firma.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vozilo.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klijent.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vozac.id)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a>
                    <nobr>|</nobr>
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    <nobr>|</nobr>
                }
            </td>
        </tr>
}
    </tbody>
</table>