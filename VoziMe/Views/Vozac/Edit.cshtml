@model VoziMe.Models.Vozac

@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi nalog</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ime" class="control-label">Ime</label>
                <input asp-for="ime" class="form-control" />
                <span asp-validation-for="ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prezime" class="control-label">Prezime</label>
                <input asp-for="prezime" class="form-control" />
                <span asp-validation-for="prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="korisnickoIme" class="control-label">Korisničko ime</label>
                <input asp-for="korisnickoIme" class="form-control" />
                <span asp-validation-for="korisnickoIme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lozinka" class="control-label">Lozinka</label>
                <input asp-for="lozinka" class="form-control" />
                <span asp-validation-for="lozinka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mailAdresa" class="control-label">Email adresa</label>
                <input asp-for="mailAdresa" class="form-control" />
                <span asp-validation-for="mailAdresa" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="spol" class="control-label">Spol</label>
                <select asp-for="spol" class="form-control"></select>
                <span asp-validation-for="spol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datumRodjenja" class="control-label">Datum rođenja</label>
                <input asp-for="datumRodjenja" class="form-control" />
                <span asp-validation-for="datumRodjenja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adresa" class="control-label">Adresa</label>
                <input asp-for="adresa" class="form-control" />
                <span asp-validation-for="adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="brojTelefona" class="control-label">Broj telefona</label>
                <input asp-for="brojTelefona" class="form-control" />
                <span asp-validation-for="brojTelefona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="firmaId" class="control-label">Firma</label>
                <select asp-for="firmaId" class="form-control" asp-items="ViewBag.firmaId"></select>
                <span asp-validation-for="firmaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="voziloId" class="control-label">Vozilo</label>
                <select asp-for="voziloId" class="form-control" asp-items="ViewBag.voziloId"></select>
                <span asp-validation-for="voziloId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="brojVozackeDozvole" class="control-label">Broj vozačke dozvole</label>
                <input asp-for="brojVozackeDozvole" class="form-control" />
                <span asp-validation-for="brojVozackeDozvole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ocjena" class="control-label">Ocjena</label>
                <input asp-for="ocjena" class="form-control" />
                <span asp-validation-for="ocjena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="xkord" class="control-label">X koordinata</label>
                <input asp-for="xkord" class="form-control" />
                <span asp-validation-for="xkord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ykord" class="control-label">Y koordinata</label>
                <input asp-for="ykord" class="form-control" />
                <span asp-validation-for="ykord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
