@{
    ViewData["Title"] = "Prijavite se";
}

<style>
    .container-box {
        background-color: #f2f2f2;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
    }

    .login-title {
        text-align: center;
    }

    .spacer {
        margin-top: 20px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-6">
        <section class="container-box" style="margin-top: 100px;">
            <form id="account" method="post" action="/Home/Login">
                <h1 class="login-title">@ViewData["Title"]</h1>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <p class="error">@ViewBag.ErrorMessage</p>
                }
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required />
                </div>
                <div class="spacer"></div>
                <button type="submit" class="w-100 btn btn-lg btn-primary mb-3">Prijavite se</button>
            </form>
        </section>
    </div>
</div>